{
    "manifest_version": 3,
    "name": "last.fm Topic Remover",
    "version": "1.0",
    "description": "Removes the 'Topic' from artist names when scraping last.fm.",

    "permissions": [
        "scripting",
        "storage",
        "webRequest"
    ],

    "host_permissions": [
        "https://www.last.fm/*",
        "https://www.youtube.com/*",
        "https://music.youtube.com/*",
        "https://ws.audioscrobbler.com/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts" :[
        {
            "matches" : [ "https://www.youtube.com/*", "https://music.youtube.com/*" ],
            "js" : [ "content.js" ],
            "run_at" : "document_start"
        }
    ],

    "action" : {
        "default_popup": "popup.html",
        "default_title": "last.fm Topic Remover"
    },

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }

}